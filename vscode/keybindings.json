// Place your key bindings in this file to override the defaults
[
  // Atom-like explorer commands
  // From https://github.com/Microsoft/vscode-atom-keybindings/blob/master/package.json
  {
    "mac": "a",
    "win": "a",
    "linux": "a",
    "key": "a",
    "when": "filesExplorerFocus && !inputFocus",
    "command": "explorer.newFile"
  },
  {
    "mac": "shift+a",
    "win": "shift+a",
    "linux": "shift+a",
    "key": "shift+a",
    "when": "filesExplorerFocus && !inputFocus",
    "command": "explorer.newFolder"
  },
  {
    "mac": "backspace",
    "win": "backspace",
    "linux": "backspace",
    "key": "backspace",
    "when": "filesExplorerFocus && !inputFocus",
    "command": "moveFileToTrash"
  },
  {
    "mac": "cmd+c",
    "win": "ctrl+c",
    "linux": "ctrl+c",
    "key": "ctrl+c",
    "when": "filesExplorerFocus && !inputFocus",
    "command": "filesExplorer.copy"
  },

  // Navigate between splits and the explorer drawer etc:
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "vim.active && vim.use<C-w>"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown",
    "when": "vim.active && vim.use<C-w>"
  },
  {
    "command": "workbench.action.navigateUp",
    "when": "vim.active && vim.use<C-w>"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "vim.active && vim.use<C-w>"
  },

  // Hide the annoying find widget:
  {
    "key": "ctrl+f",
    "command": "closeFindWidget",
    "when": "editorFocus && findWidgetVisible"
  },

  // For the explorer drawer...
  // Set cmd+enter to be rename file...
  {
    "key": "cmd+enter",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  // ...and remove the default enter-to-rename...
  {
    "key": "enter",
    "command": "-renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
  },
  // ...and set enter to open the file instead.
  {
    "key": "enter",
    "command": "list.select",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "cmd+f",
    "command": "-list.find",
    "when": "listFocus && listSupportsFind"
  },
  {
  "key": "m a",
  "command": "explorer.newFile",
  "when": "explorerViewletVisible && filesExplorerFocus"
},
{
  "key": "m shift+a",
  "command": "explorer.newFolder",
  "when": "explorerViewletVisible && filesExplorerFocus"
}
]
