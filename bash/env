
# Handy function.
command_exists () {
    type "$1" &> /dev/null ;
}

## EDITOR

#export EDITOR='subl -w'
#export EDITOR='mvim -w'
export EDITOR='atom -w'


## NODE

# For node.js (installed with homebrew).
export NODE_PATH='/usr/local/lib/node_modules'

[[ -s /Users/phil/.nvm/nvm.sh ]] && . /Users/phil/.nvm/nvm.sh # This loads NVM

export NVM_DIR="/Users/phil/.nvm"
if [ -f NVM_DIR ]
then
    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm
fi

## PATH

PATH=/usr/local/bin:/usr/local/sbin:$PATH
export PATH=/usr/local/mysql/bin:$PATH

export PATH=/usr/local/pgsql/bin:$PATH

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"


## RUBY


if command_exists rbenv ; then
    eval "$(rbenv init -)"
fi


##Â PYTHON

# For pyenv:
# https://github.com/pyenv/pyenv/wiki/Common-build-problems#build-failed-error-the-python-zlib-extension-was-not-compiled-missing-the-zlib
CFLAGS="-I$(xcrun --show-sdk-path)/usr/include"

if command_exists pyenv ; then
    eval "$(pyenv init -)"
    eval "$(pyenv virtualenv-init -)"
fi
